{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,   
    "isolatedModules": true
  },
  "include": [
    "src",
    "prisma"
  ],
  "exclude": [
    "node_modules"
  ]
}