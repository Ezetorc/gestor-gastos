{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "isolatedModules": true
  },
  "include": ["src", "prisma", "tests/unit/add.test.ts"],
  "exclude": ["node_modules"]
}
