{
  "name": "gestor-gastos",
  "version": "1.0.0",
  "description": "Backend del proyecto de gestor de gastos",
  "keywords": [
    "gestor",
    "gastos",
    "backend",
    "frontend"
  ],
  "homepage": "https://github.com/Ezetorc/gestor-gastos-backend#readme",
  "bugs": {
    "url": "https://github.com/Ezetorc/gestor-gastos-backend/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ezetorc/gestor-gastos-backend.git"
  },
  "license": "MIT",
  "author": "Ezetorc, Ayaya, Mabe & Facundo",
  "type": "commonjs",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "build:front": "npm run --workspace frontend build",
    "dev:front": "ts-node-dev --respawn --transpile-only frontend/src/index.ts",
    "build:back": "npm run --workspace backend build",
    "dev:back": "ts-node-dev --respawn --transpile-only backend/src/index.ts",
    "format:back": "prettier --write backend/src",
    "format:front": "prettier --write frontend/src",
    "lint:back": "eslint backend/src --ext .ts",
    "lint:front": "eslint frontend/src --ext .ts",
    "lint:all": "eslint . --ext .ts",
    "format:all": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.7",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "express": "^5.1.0"
  }
}
